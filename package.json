{
  "name": "@weboops/core",
  "version": "0.0.1",
  "description": "Compiler for simple frontend applications",
  "author": "ivan-podgornov",
  "bin": {
    "weboops": "dist/cli.js"
  },
  "scripts": {
    "prebuild": "npm run compile",
    "build": "node dist/cli.js --mode build",
    "clean": "rimraf dist",
    "compile": "npm run clean & tsc -p tsconfig.json",
    "dev": "npm run compile && node dist/cli.js --mode development",
    "prestart": "npm run compile",
    "prepublishOnly": "npm run compile"
  },
  "dependencies": {
    "clean-webpack-plugin": "^3.0.0",
    "commander": "^6.1.0",
    "css-loader": "^5.0.0",
    "html-webpack-plugin": "^4.5.0",
    "mini-css-extract-plugin": "^1.0.0",
    "pug": "^3.0.0",
    "pug-loader": "^2.4.0",
    "webpack": "^5.1.0",
    "webpack-dev-server": "^3.11.0"
  },
  "devDependencies": {
    "@types/commander": "^2.12.2",
    "@types/mini-css-extract-plugin": "^0.9.1",
    "@types/node": "^14.11.8",
    "@types/webpack": "^4.41.22",
    "@types/webpack-dev-server": "^3.11.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.0.3"
  }
}
